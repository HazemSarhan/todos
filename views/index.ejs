<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <section
      class="todo vh-100 d-flex justify-content-center align-items-center"
    >
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-md-2">
            <div class="card rounded-2 shadow-lg">
              <div class="card-body">
                <!-- Heading -->
                <h2 class="text-center fw-bold mt-5">To-Do List</h2>

                <!-- Add New To Do Form -->
                <form id="create-form" class="mb-4">
                  <div class="input-group">
                    <input
                      type="text"
                      id="todo-title"
                      name="title"
                      class="form-control"
                      placeholder="Enter a new to-do item"
                      required
                    />
                    <button type="submit" class="btn btn-main">
                      Add To Do
                    </button>
                  </div>
                </form>

                <!-- Uncompleted To Dos -->
                <h3 class="fw-bold text-center mt-5">Pending Tasks</h3>
                <ul class="list-group">
                  <% uncompletedTodos.forEach((todo) => { %>
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center"
                  >
                    <%= todo.title %>
                    <div class="d-flex gap-2">
                      <!-- Mark as Done -->
                      <button
                        class="btn btn-success btn-sm update-btn"
                        data-id="<%= todo._id %>"
                      >
                        <i class="fa-solid fa-check"></i> Done
                      </button>
                      <!-- Delete To Do -->
                      <button
                        class="btn btn-danger btn-sm delete-btn"
                        data-id="<%= todo._id %>"
                      >
                        <i class="fa-solid fa-trash"></i> Delete
                      </button>
                    </div>
                  </li>
                  <% }) %>
                </ul>

                <!-- Completed To Dos -->
                <h3 class="fw-bold text-center mt-5 mb-2">Completed Tasks</h3>
                <ul class="list-group">
                  <% completedTodos.forEach((todo) => { %>
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center"
                  >
                    <span class="text-done text-decoration-line-through"
                      ><%= todo.title %></span
                    >
                    <button
                      class="btn btn-danger btn-sm delete-btn"
                      data-id="<%= todo._id %>"
                    >
                      <i class="fa-solid fa-trash"></i> Delete
                    </button>
                  </li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="js/createTodo.js"></script>
    <script src="js/updateTodo.js"></script>
    <script src="js/deleteTodo.js"></script>
  </body>
</html>
